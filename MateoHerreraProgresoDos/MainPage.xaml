             x:Class="MateoHerreraProgresoDos.MainPage"
             Title="Bienvenido">

    <ScrollView>
        <VerticalStackLayout
      Padding="30"
      Spacing="20"
      VerticalOptions="Center">

            <!-- Título -->
            <Label 
        Text="Aplicación de Mateo Herrera ¿Listo para los chistes malos?" 
        FontSize="32" 
        HorizontalOptions="Center" 
