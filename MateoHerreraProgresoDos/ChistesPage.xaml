<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateoHerreraProgresoDos.ChistesPage"
             Title="Chistes">

    <AbsoluteLayout>

        <!-- Label con los chistes  -->
        <Label x:Name="ChisteLabel"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="20"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.5,0.9,0.8"
               AbsoluteLayout.LayoutFlags="All"
               Text="Presiona el botón para obtener un chiste."/>


        <!-- Botón fijo en la parte inferior -->
        <Button Text="Otro chiste"
                AbsoluteLayout.LayoutBounds="0,1,1,60"
                AbsoluteLayout.LayoutFlags="WidthProportional, PositionProportional"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnObtenerChisteClicked"/>
    </AbsoluteLayout>
</ContentPage>
