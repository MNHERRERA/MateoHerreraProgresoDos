<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateoHerreraProgresoDos.AboutPage"
             Title="Acerca de mí">

    <Grid Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
        <!-- Definimos el Grid 2x2 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Caja 1: Nombre -->
        <BoxView Color="#E0E0E0"
                 Grid.Row="0"
                 Grid.Column="0"/>
        <Label Text="Nombre:Mateo Herrera"
               Grid.Row="0"
               Grid.Column="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Caja 2: Fecha -->
        <BoxView Color="#E0E0E0"
                 Grid.Row="0"
                 Grid.Column="1"/>
        <Label Text="Nacimiento:30/06/2001"
               Grid.Row="0"
               Grid.Column="1"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Caja 3: Intereses -->
        <BoxView Color="#E0E0E0"
                 Grid.Row="1"
                 Grid.Column="0"/>
        <Label Text="Intereses:Downhill, Dota 2"
               Grid.Row="1"
               Grid.Column="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Caja 4: Versión -->
        <BoxView Color="#E0E0E0"
                 Grid.Row="1"
                 Grid.Column="1"/>
        <Label Text="Versión:1.0"
               Grid.Row="1"
               Grid.Column="1"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>
    </Grid>
</ContentPage>
